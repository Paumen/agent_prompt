{
  "name": "agent-prompt",
  "version": "0.1.0",
  "description": "Prompt generator web app for AI-powered GitHub automation",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "vite --config config/vite.config.js",
    "build": "vite build --config config/vite.config.js",
    "preview": "vite preview --config config/vite.config.js",
    "lint": "eslint src/ tests/ --config config/eslint.config.js",
    "lint:fix": "eslint src/ tests/ --fix --config config/eslint.config.js",
    "format": "prettier --write . --config config/.prettierrc --ignore-path config/.prettierignore",
    "test": "vitest run --config config/vite.config.js"
  },
  "devDependencies": {
    "eslint": "^10.0.1",
    "globals": "^17.3.0",
    "jsdom": "^28.1.0",
    "prettier": "^3.0.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
